package com.example.taxisqlite;

import android.content.Context;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteOpenHelper;

public class TaxiDatabase extends SQLiteOpenHelper {

    public TaxiDatabase(Context context) {
        super(context, "TaxiDB.db", null, 1);
    }

    @Override
    public void onCreate(SQLiteDatabase db) {
        db.execSQL("CREATE TABLE Taxi(" +
                "ID INTEGER PRIMARY KEY AUTOINCREMENT," +
                "Name TEXT," +
                "Phone TEXT)");
        // dữ liệu mẫu
        db.execSQL("INSERT INTO Taxi(Name,Phone) VALUES('Mai Linh','02838383838')");
        db.execSQL("INSERT INTO Taxi(Name,Phone) VALUES('Vinasun','02838272727')");
        db.execSQL("INSERT INTO Taxi(Name,Phone) VALUES('Minh','0772534611')");
        db.execSQL("INSERT INTO Taxi(Name,Phone) VALUES('Nam','0776363937')");
    }

    @Override
    public void onUpgrade(SQLiteDatabase db, int oldV, int newV) {
        db.execSQL("DROP TABLE IF EXISTS Taxi");
        onCreate(db);
    }
}

